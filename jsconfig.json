{
  "compilerOptions": {
    "target": "ES2021",
    "baseUrl": "./src/",
    "paths": {
      "components/*": ["components/*"],
      "resources/*": ["resources/*"],
      "theme/*": ["theme/*"],
      "store/*": ["store/*"],
      "redux/*": ["redux/*"],
      "hooks/*": ["hooks/*"],
      "utils/*": ["utils/*"],
      "api/*": ["api/*"]
    }
  },
  "include": ["src/**/*.jsx", "src/**/*.js"],
  "exclude": [
    "dist",
    "node_modules",
    "build",
    ".vscode",
    ".nuxt",
    "coverage",
    "jspm_packages",
    "tmp",
    "temp",
    "bower_components",
    ".npm",
    ".yarn"
  ]
}
